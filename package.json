{
  "name": "discord-bot-template",
  "version": "1.0.0",
  "description": "A simple discord bot template to get you started with building your own bot quickly.",
  "author": "phxgg",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && tsc-alias",
    "start": "node .",
    "format": "oxfmt",
    "lint:check": "oxlint",
    "lint:fix": "oxlint --fix",
    "preview": "npm run build && node .",
    "dev": "concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon --watch dist dist/index.js\"",
    "deploy": "node scripts/deploy.mjs",
    "undeploy": "node scripts/undeploy.mjs",
    "deploy:global": "node scripts/deploy-global.mjs",
    "undeploy:global": "node scripts/undeploy-global.mjs",
    "ncu:check": "npx npm-check-updates -x @types/node",
    "ncu:update": "npx npm-check-updates -u -x @types/node",
    "bump-deps": "npm run ncu:update && npm install && git add . && git commit -m \"chore: bump deps\""
  },
  "keywords": [
    "discord",
    "bot",
    "template",
    "discord.js",
    "node.js"
  ],
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "globals": "^17.3.0",
    "nodemon": "^3.1.11",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "rimraf": "^6.1.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}
